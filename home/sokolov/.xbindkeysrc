#keystate_numlock = enable
#keystate_capslock = enable
#keystate_scrolllock= enable

"xbindkeys_show"
  control+shift + q

# vol down
"~/scrpts/changevol -d 5"
  Control + KP_Divide

# vol up
"~/scrpts/changevol -i 5"
  Control + KP_Multiply

# vol toggle mute
 "~/scrpts/changevol -t"
   Control + KP_Subtract

# mpd next
 "mpc next"
   Control + KP_Right

# mpd prev
 "mpc prev"
   Control + KP_Left

# mpd toggle
 "mpc toggle"
   Control + KP_Begin

# slock
 "slock"
    Control + Pause
