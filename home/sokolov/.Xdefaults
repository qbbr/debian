! xterm
! =========================================================
xterm*geometry:                        80x25
xterm*faceName:                        terminus:pixelsize=16
xterm*boldMode:                        false
xterm*dynamicColors:                   true
xterm*utf8:                            2
xterm*eightBitInput:                   true
xterm*saveLines:                       2000
xterm*scrollTtyKeypress:               true
xterm*scrollTtyOutput:                 false
xterm*scrollBar:                       true
xterm*loginShell:                      true
xterm*jumpScroll:                      false
xterm*multiScroll:                     true
xterm*toolBar:                         true
xterm*charClass:                       33:48,35:48,37:48,43:48,45-47:48,64:48,95:48,126:48,35:48


! colors
! =========================================================
*background:                           #101010
*foreground:                           #eeeeee
! Black
*color0:                               #000000
*color8:                               #000000
! Red
*color1:                               #bf4646
*color9:                               #f48a8a
! Green
*color2:                               #67b25f
*color10:                              #a5d79f
! Yellow
*color3:                               #cfc44e
*color11:                              #e1da84
! Blue
*color4:                               #224488
*color12:                              #5C81AF
! Magenta
*color5:                               #ca6eff
*color13:                              #e2b0ff
! Cyan
*color6:                               #92b2f8
*color14:                              #bacdf8
! White
*color7:                               #d5d5d5
*color15:                              #d5d5d5


! Xft
! =========================================================
Xft.dpi:                               96
Xft.antialias:                         true
Xft.hinting:                           true
Xft.hinstyle:                          hintslight
Xft.rgba:                              rgb


! urxvt
! =========================================================
urxvt*font:                            -*-terminus-medium-r-*-*-16-*-*-*-*-*-*-*
!urxvt*boldFont:                        -*-terminus-medium-r-*-*-16-*-*-*-*-*-*-*
!urxvt*italicFont:                      -*-terminus-medium-r-*-*-16-*-*-*-*-*-*-*
!urxvt*background:                      #111111
!urxvt*foreground:                      #ffffff
urxvt*buffered:                        true
urxvt*scrollBar:                       true
urxvt*scrollTtyKeypress:               true
urxvt*scrollWithBuffer:                false
urxvt*scrollTtyOutput:                 false
urxvt*scrollstyle:                     plain
urxvt*scrollBar_right:                 true
urxvt*scrollColor:                     #729FCF
urxvt*geometry:                        100x30
! Запускать как логин-шелл, а не суб-шелл текущего
!urxvt*loginShell:                      true
urxvt*internalBorder:                  5
urxvt*transparent:                     true
urxvt*inheritPixmap:                   true
urxvt*fading:                          10
urxvt*shading:                         90
urxvt*tintColor:                       #101010
urxvt*depth:                           24
urxvt*saveLines:                       2000
urxvt*visualBell:                      true
urxvt*cursorColor:                     #729FCF
urxvt*secondaryScroll:                 true
urxvt*mapAlert:                        true
urxvt*utmpInhibit:                     true
urxvt*urlLauncher:                     /usr/bin/chromium-browser
urxvt*matcher.button:                  1
urxvt*background:                      #101010
urxvt*meta8:                           true
urxvt*tint:                            colour
!urxvt*cutchars:                        @%&()*,;<>[]{}|
!urxvt*print-pipe:                      cat > $(echo urxvt.dump.`date +'%Y%M%d%H%m%S'`)
urxvt*perl-ext-common:                 default,matcher,clipboard
!urxvt.matcher.rend.0:                  fg16 RS_Uline


! xpdf
! =========================================================
xpdf*enableFreetype:                   yes
xpdf*antialias:                        yes
!xpdf*foreground:                       white
!xpdf*background:                       black
xpdf*urlCommand:                       /usr/bin/chromium-browser %s
xpdf*viKeys:                           on


! xcalc
! =========================================================
xcalc*geometry:                        200x275
xcalc.ti.bevel.background:             #729FCF
xcalc.ti.bevel.screen.DEG.foreground:  white
