xcalc.ti.button25.background:          #555555
xcalc.ti.button30.background:          #555555
xcalc.ti.button35.background:          #555555
xcalc.ti.button40.background:          #67b25f
xcalc.ti.button22.background:          #516083
xcalc.ti.button23.background:          #516083
xcalc.ti.button24.background:          #516083
xcalc.ti.button27.background:          #516083
xcalc.ti.button28.background:          #516083
xcalc.ti.button29.background:          #516083
xcalc.ti.button32.background:          #516083
xcalc.ti.button33.background:          #516083
xcalc.ti.button34.background:          #516083
xcalc.ti.button37.background:          #516083
xcalc.ti.button38.background:          #516083
xcalc.ti.button39.background:          #516083


! xclock
! =========================================================
xclock*update:                         1
xclock*analog:                         false
xclock*foreground:                     white
!xclock*background:                     black
